.container
	display flex
	justify-content center
	align-content space-between
	& h1
		text-align center
	& h4
		text-align center
		letter-spacing: 1px
		margin-top:-30px
		min-width: 250px

	& img[src='/img/moon.jpg']
		position absolute
		transform: rotate(55deg)
		top: 0
		z-index -1
		opacity 0.3
		right 10%
		width: 80px
	& img[src='/img/bar.jpg']
		opacity 0.8
		width 80%
		min-width: 500px
		margin-bottom 60px

.glow
	border 1px solid #E8A723
	box-shadow 0 0 3px gold
	&:hover
		border-color #bd7e00

.alert
	background-color rgba(0,0,0,0.7)
	position absolute
	left:50%
	transform translateX(-50%)
	max-width: auto
	white-space: nowrap;
	color: white
	font-size 1.3em
	padding 0.7em 1em 0.7em 2em
	border 2px solid #E8A723
	border-radius 8px
	font-family: monospace
	margin: 50px -30px 30px 0

span
	margin-left 1em
	font-size 1.5em
	line-height 0.6em
	color lightgray
	cursor: pointer

.flex-start
	align-self flex-start
	margin-bottom 60px

.slim-column
	margin-top: -20px
	display:flex;
	flex-direction column
	& input
		flex-grow: 0 !important

.title
	position:relative

@media (min-width: 550px)
	.container
		& img[src='/img/moon.jpg']
			right 0
			margin-right: -50px
			width: 110px
	.flex-center-mod img[src='/img/moon.jpg']
		margin-right: -220px !important



.flex-center
	display flex
	align-items center
	justify-content: center
	width 100%
	flex-wrap wrap
	& form
		display:flex
		align-items center
		transform translateY(-50%)
		width: 100%
		& label
			min-width: 220px
		& input
			flex-grow 1
		& button
			margin-top -6px
			margin-left -1px

.flex-center-mod
	margin-top -150px
	width 100%
	height 100%
	display flex
	justify-content: center;
	flex-direction column
	& form
		position relative
		max-height 130px
		margin-bottom 80px
		top 80px
		& .button
			margin-top 10px
	& .center
		align-self: center;
	& .city
		padding: 2rem
	& img[src='/img/moon.jpg']
		margin-right -40px
	& .flex-center
		flex-wrap: nowrap

.flex-results
	width: 100%
	overflow:auto
	height: auto
	max-height 80vh
	margin-top -3vw
	padding 20px
	& h4
		text-align left

.listing
	padding-bottom 20px
	margin-bottom 1vw
	padding-top 1rem

.purple
	background-color #443642
	position: relative
	display flex
	flex-wrap wrap
	justify-content center
	padding-top 10rem
	box-shadow inset 5px 0 20px -5px rgba(0,0,0,0.7)
	& > div
		width 80%
	& footer
		padding 0 2rem 1rem 2rem
		position relative
		text-align center
		align-self: flex-end;
		width auto
		color: white
		& a, a:visited, a:active
			text-decoration none
			color #E8A723
	& button, button:focus
		width 100%
		margin-top 1rem
		background-color rgba(0,0,0,0.6)
		border-color #E8A723
	& button:hover
		background-color rgba(0,0,0,0.4)
		border-color #E8A723

.meta-info
	margin-top: -20px

.pad-top
	margin-top 0
	justify-content: flex-start;
	& .button
		margin-top -5px !important
	& img[src='/img/moon.jpg']
		left: 80%

button
	white-space: normal;
	min-height: 38px
	height: auto !important
	max-height auto;

.marg-left
	margin-left: 10px
	height: 30px
	line-height 30px

hr
	margin-top 0

.fullscreen
	min-height 100vh
	height: auto

.row
	display: flex
	flex-wrap: wrap;
	flex-grow 1
	justify-content: center;
